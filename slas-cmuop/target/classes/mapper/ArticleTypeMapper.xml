<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cmft.slas.cmuop.mapper.ArticleTypeMapper">
	<resultMap id="BaseResultMap" type="com.cmft.slas.cmuop.entity.ArticleType">
    	<id column="article_entity_id" jdbcType="BIGINT" property="articleEntityId" />
    	<result column="article_id" jdbcType="VARCHAR" property="articleId" />
    	<result column="type_id" jdbcType="VARCHAR" property="typeId" />
    	<result column="create_operator" jdbcType="VARCHAR" property="createOperator" />
    	<result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    	<result column="update_operator" jdbcType="VARCHAR" property="updateOperator" />
    	<result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    	<result column="is_delete" jdbcType="TINYINT" property="isDelete" />
  	</resultMap>
	<sql id="Base_Column_List">
    	article_entity_id,
    	article_id,
    	type_id,
    	create_operator,
    	create_time,
    	update_operator,
    	update_time,
    	is_delete
  	</sql>
	<resultMap id="ExtendResultMap" extends="BaseResultMap"
		type="com.cmft.slas.cmuop.dto.ArticleTypeDTO">
	</resultMap>

	<sql id="pageQueryCond">
		<if test="articleId != null">
		and article_id = #{articleId,jdbcType=VARCHAR}
		</if>
		<if test="typeId != null">
		and type_id = #{typeId,jdbcType=VARCHAR}
		</if>
		<if test="createOperator != null">
		and create_operator = #{createOperator,jdbcType=VARCHAR}
		</if>
		<if test="updateOperator != null">
		and update_operator = #{updateOperator,jdbcType=VARCHAR}
		</if>
		<if test="isDelete != null">
		and is_delete = #{isDelete,jdbcType=TINYINT}
		</if>
	</sql>
	<select id="queryByCondition" resultMap="BaseResultMap"
		parameterType="com.cmft.slas.cmuop.dto.ArticleTypeDTO">
		SELECT
		<include refid="Base_Column_List"></include>
		FROM t_article_type WHERE 1 = 1
		<include refid="pageQueryCond"></include>
	</select>

	<select id="countByCondition" resultType="java.lang.Long"
		parameterType="com.cmft.slas.cmuop.dto.ArticleTypeDTO">
		SELECT COUNT(1) FROM t_article_type WHERE 1 = 1
		<include refid="pageQueryCond"></include>
	</select>
	
	<select id="queryArticleTypeList" resultMap="BaseResultMap">
	  	SELECT 
	  	<include refid="Base_Column_List" />
	  	FROM t_article_type
	  	WHERE is_delete = 0
	  	ORDER BY article_entity_id
  	</select>
</mapper>