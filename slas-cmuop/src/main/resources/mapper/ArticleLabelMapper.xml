<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cmft.slas.cmuop.mapper.ArticleLabelMapper">
	<resultMap id="BaseResultMap" type="com.cmft.slas.cmuop.entity.ArticleLabel">
    	<id column="article_label_id" jdbcType="BIGINT" property="articleLabelId" />
    	<result column="article_id" jdbcType="VARCHAR" property="articleId" />
    	<result column="label_id" jdbcType="VARCHAR" property="labelId" />
    	<result column="label_type" jdbcType="VARCHAR" property="labelType" />
    	<result column="create_operator" jdbcType="VARCHAR" property="createOperator" />
    	<result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    	<result column="update_operator" jdbcType="VARCHAR" property="updateOperator" />
    	<result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    	<result column="is_delete" jdbcType="TINYINT" property="isDelete" />
  	</resultMap>
	<sql id="Base_Column_List">
    	article_label_id,
    	article_id,
    	label_id,
    	label_type,
    	create_operator,
    	create_time,
    	update_operator,
    	update_time,
    	is_delete
  	</sql>
	<resultMap id="ExtendResultMap" extends="BaseResultMap"
		type="com.cmft.slas.cmuop.dto.ArticleLabelDTO">
	</resultMap>

	<select id="queryByCondition" resultMap="BaseResultMap"
		parameterType="com.cmft.slas.cmuop.dto.ArticleLabelDTO">
		SELECT
		<include refid="Base_Column_List"></include>
		FROM t_article_label WHERE 1 = 1
		<if test="articleId != null">
		and article_id = #{articleId,jdbcType=VARCHAR}
		</if>
		<if test="labelId != null">
		and label_id = #{labelId,jdbcType=VARCHAR}
		</if>
		<if test="labelType != null">
		and label_type = #{labelType,jdbcType=VARCHAR}
		</if>
		<if test="isDelete != null">
		and is_delete = #{isDelete,jdbcType=TINYINT}
		</if>
	</select>

	
	<select id="queryArticleLabelList" resultMap="BaseResultMap">
	  	SELECT 
	  	<include refid="Base_Column_List" />
	  	FROM t_article_label
	  	WHERE is_delete = 0
	  	ORDER BY article_label_id
  	</select>
</mapper>