<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cmft.slas.cmuop.mapper.UserEntityMapper">
    <resultMap id="BaseResultMap" type="com.cmft.slas.cmuop.entity.UserEntity">
        <id column="user_entity_id" jdbcType="BIGINT" property="userEntityId"/>
        <result column="uid" jdbcType="VARCHAR" property="uid"/>
        <result column="entity_code" jdbcType="VARCHAR" property="entityCode"/>
        <result column="entrepreneur_position" jdbcType="VARCHAR" property="entrepreneurPosition"/>
        <result column="from_nuc" jdbcType="TINYINT" property="fromNuc"/>
        <result column="create_operator" jdbcType="VARCHAR" property="createOperator"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_operator" jdbcType="VARCHAR" property="updateOperator"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="is_valid" jdbcType="TINYINT" property="isValid"/>
        <result column="order_num" jdbcType="TINYINT" property="orderNum"/>
    </resultMap>
    <sql id="Base_Column_List">
        user_entity_id,
        uid,
        entity_code,
        entrepreneur_position,
        from_nuc,
        create_operator,
        create_time,
        update_operator,
        update_time,
        is_valid,
        order_num
    </sql>
    <resultMap id="ExtendResultMap" extends="BaseResultMap"
               type="com.cmft.slas.cmuop.dto.UserEntityDTO">
    </resultMap>

    <sql id="pageQueryCond">
        <if test="uid != null">
            and uid = #{uid,jdbcType=VARCHAR}
        </if>
        <if test="entityCode != null">
            and entity_code = #{entityCode,jdbcType=VARCHAR}
        </if>
        <if test="fromNuc != null">
            and from_nuc = #{fromNuc,jdbcType=TINYINT}
        </if>
        <if test="createOperator != null">
            and create_operator = #{createOperator,jdbcType=VARCHAR}
        </if>
        <if test="updateOperator != null">
            and update_operator = #{updateOperator,jdbcType=VARCHAR}
        </if>
        <if test="isValid != null">
            and is_valid = #{isValid,jdbcType=TINYINT}
        </if>
    </sql>
    <select id="queryByCondition" resultMap="BaseResultMap"
            parameterType="com.cmft.slas.cmuop.dto.UserEntityDTO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_user_entity WHERE is_delete = 0
        <include refid="pageQueryCond"/>
    </select>

    <select id="countByCondition" resultType="java.lang.Long"
            parameterType="com.cmft.slas.cmuop.dto.UserEntityDTO">
        SELECT COUNT(1) FROM t_user_entity WHERE 1 = 1 and is_delete = 0
        <include refid="pageQueryCond"/>
    </select>

    <select id="queryUserEntityList" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_user_entity
        WHERE is_delete = 0
    </select>
</mapper>